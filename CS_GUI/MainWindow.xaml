<Window x:Class="CS_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:CS_GUI"
        mc:Ignorable="d"
        Title="Math Evaluator" Height="536" Width="1008">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <local:TopMenu Grid.Row="0"/>

        <Label Grid.Row="1"
               Content="Math Evaluator"
               FontSize="20"
               FontWeight="bold"
               Foreground="DeepPink"
               HorizontalAlignment="Left"
               Margin="10,10,0,5"/>

        <!-- Main content: Left (input + plot) | Right (history + parse tree) -->
        <Grid Grid.Row="2" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <!-- Left: input/error + plot -->
                <ColumnDefinition Width="4*"/>
                <!-- Right: history + parse tree -->
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column -->
            <Grid Grid.Column="0" Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Input -->
                <StackPanel Grid.Row="0" Margin="0,0,0,4">
                    <Label Content="Input:"/>
                    <TextBox x:Name="inputBox" 
                             TextWrapping="Wrap" 
                             Text=""
                             IsReadOnly="False"
                             MaxHeight="80"/>
                </StackPanel>

                <!-- Error -->
                <StackPanel Grid.Row="1" Margin="0,0,0,4">
                    <Label Content="Error:"/>
                    <TextBox x:Name="errorBox" 
                             TextWrapping="Wrap"
                             Text=""
                             IsReadOnly="True"
                             Foreground="Red"
                             MaxHeight="60"
                             TextChanged="TextBox_TextChanged"/>
                </StackPanel>

                <!-- Calc/Plot/Parse Tree Buttons -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            Margin="0,4,0,8">
                    <Button x:Name="buttonCalculate"
                            Content="Calculate"
                            Margin="0,0,8,0"
                            Click="buttonCalculate_Click"/>

                    <Button x:Name="buttonPlot"
                            Content="Plot"
                            Width="52"
                            Margin="0,0,8,0"
                            Click="buttonPlot_Click"/>

                    <Button x:Name="buttonParseTree"
                            Content="Parse Tree"
                            Width="100"
                            Click="buttonParseTree_Click"/>
                </StackPanel>

                <!-- Plot area (takes remaining vertical space on the left) -->
                <local:PlottingArea x:Name="PlotArea"
                                    Grid.Row="3"
                                    Margin="0,0,0,10"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"/>

                <!-- Numeric controls under the plot -->
                <StackPanel Grid.Row="4"
                            Orientation="Horizontal"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">

                    <!-- Min X-->
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="Min X:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"
                                   FontWeight="Bold"/>
                        <xctk:DoubleUpDown x:Name="MinXDoubleUpDown"
                                           Width="70"
                                           Height="24"
                                           Increment="0.1"
                                           Value="-100" />
                    </StackPanel>

                    <!-- Max X -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="Max X:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"
                                   FontWeight="Bold"/>
                        <xctk:DoubleUpDown x:Name="MaxXDoubleUpDown"
                                           Width="70"
                                           Height="24"
                                           Increment="0.1"
                                           Value="100" />
                    </StackPanel>

                    <!-- Step -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Step:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"
                                   FontWeight="Bold"/>
                        <xctk:DoubleUpDown x:Name="StepDoubleUpDown"
                                           Width="70"
                                           Height="24"
                                           Increment="0.1"
                                           Value="0.01" />
                    </StackPanel>
                    <!-- Interpolation -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Interpolation:"
                             VerticalAlignment="Center"
                             Margin="10,0,5,0"
                             FontWeight="Bold"/>
                        <ComboBox x:Name="InterpolationCombo"
                            Width="100"
                            SelectedIndex="0"
                            SelectionChanged="InterpolationCombo_SelectionChanged">
                            <ComboBoxItem Content="Linear"/>
                            <ComboBoxItem Content="Spline"/>
                        </ComboBox>
                        <CheckBox Content="1:1 Axis"
                          Margin="5"
                          IsChecked="True"
                          Checked="AspectRatioCheckBox_Changed"
                          Unchecked="AspectRatioCheckBox_Changed"/>

                    </StackPanel>
                </StackPanel>
                <!-- Advanced Maths (change at will) -->
                <GroupBox Grid.Row="5"
                          Header="Advanced Maths"
                          Margin="0,8,0,0">
                    <StackPanel>

                        <!-- Derivative -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <TextBlock Text="Derivative at x₀:"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0"/>
                            <xctk:DoubleUpDown x:Name="DerivativeX0UpDown"
                                               Width="80"
                                               Height="24"
                                               Increment="0.1"
                                               Value="0" />
                            <Button x:Name="buttonDerivative"
                                    Content="Compute"
                                    Margin="10,0,10,0"
                                    Click="buttonDerivative_Click"/>
                            <Button x:Name="buttonPlotTangent"
                                Content="Plot Tangent"
                                Margin="0,0,10,0"
                                Click="buttonPlotTangent_Click"/>
                            <Button x:Name="buttonClearTangents"
                                Content="Clear Tangents"
                                Click="buttonClearTangents_Click"/>
                        </StackPanel>

                        <!-- Root finding -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <TextBlock Text="Root [a, b]:"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0"/>
                            <xctk:DoubleUpDown x:Name="RootAUpDown"
                                               Width="70"
                                               Height="24"
                                               Increment="0.1"
                                               Value="-10" />
                            <xctk:DoubleUpDown x:Name="RootBUpDown"
                                               Width="70"
                                               Height="24"
                                               Increment="0.1"
                                               Margin="5,0,0,0"
                                               Value="10" />
                            <Button x:Name="buttonRoot"
                                    Content="Find Root"
                                    Margin="10,0,0,0"
                                    Click="buttonRoot_Click"/>
                        </StackPanel>

                        <!-- Integration -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Integral [a, b]:"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0"/>
                            <xctk:DoubleUpDown x:Name="IntegralAUpDown"
                                               Width="70"
                                               Height="24"
                                               Increment="0.1"
                                               Value="0" />
                            <xctk:DoubleUpDown x:Name="IntegralBUpDown"
                                               Width="70"
                                               Height="24"
                                               Increment="0.1"
                                               Margin="5,0,0,0"
                                               Value="1" />
                            <Button x:Name="buttonIntegrate"
                                    Content="Integrate"
                                    Margin="10,0,0,0"
                                    Click="buttonIntegrate_Click"/>
                            <Button x:Name="buttonPlotIntegral"
                                Content="Plot Integral"
                                Margin="10,0,0,0"
                                Click="buttonPlotIntegral_Click"/>
                            <Button x:Name="buttonClearIntegrals"
                                Content="Clear Integral"
                                Margin="10,0,0,0"
                                Click="buttonClearIntegrals_Click"/>
                        </StackPanel>

                    </StackPanel>
                </GroupBox>

            </Grid>

            <!-- Right Column -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- History label -->
                <Label Grid.Row="0"
           Content="Output History:"/>

                <!-- History list -->
                <ListBox x:Name="HistoryBox"
             Grid.Row="1"
             ItemsSource="{Binding History}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="{Binding Expression}"
                               FontSize="14"
                               Margin="0,0,10,0" />

                                <TextBlock Text="="
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="0,0,10,0" />

                                <TextBlock Text="{Binding Result}"
                               FontSize="14"
                               FontWeight="Bold" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Clear history button -->
                <Button x:Name="ClearHistoryButton"
            Grid.Row="2"
            Content="Clear"
            HorizontalAlignment="Right"
            Margin="0,8,0,8"
            Width="60"
            Click="ClearHistoryButton_Click"/>

                <!-- Parse Tree label -->
                <Label Grid.Row="3"
           Content="Parse Tree:"/>

                <!-- Parse tree output box -->
                <TextBox x:Name="parseTreeBox"
             Grid.Row="4"
             Margin="0,0,0,0"
             Text=""
             IsReadOnly="True"
             AcceptsReturn="True"
             VerticalScrollBarVisibility="Auto"
             HorizontalScrollBarVisibility="Auto"
             FontFamily="Consolas"
             TextWrapping="NoWrap" />
            </Grid>
        </Grid>
    </Grid>
</Window>
